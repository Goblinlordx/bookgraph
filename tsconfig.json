{
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
  ],
  "compilerOptions": {
    "composite": true,
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "rootDir": "src",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "jest",
      "node",
      "@types/jest"
    ]
  }
}